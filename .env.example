# Database
DATABASE_URL="postgresql://user:password@localhost:5432/openleague?schema=public"

# Application
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Email Configuration (Gmail example)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# Coinbase CDP Configuration
CDP_API_KEY_ID="your-coinbase-cdp-api-key-id"
CDP_API_KEY_SECRET="your-coinbase-cdp-api-key-secret"

# Blockchain
PRIVATE_KEY=your_private_key_here
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Contract Addresses (after deployment)
CONTRACT_ADDRESS=

# Arkiv Network Configuration
# Private key for Arkiv Network (hex format WITHOUT 0x prefix)
# This key is used to sign transactions on Arkiv Network
# Generate a new key or use an existing one
ARKIV_PRIVATE_KEY=your_arkiv_private_key_in_hex_without_0x
